{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous étes connecter {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnecter</a>
                        </div>
                    {% endif %}

                
                    <input class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96 ml-48 p-2.5 mb-2 dark:bg-green-100 dark:border-green-400" placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <input class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96 ml-48 p-2.5 mb-2 dark:bg-green-100 dark:border-green-400" placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <button type="submit" class="text-white bg-green-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mt-2 ml-48 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            Connexion
                    </button>
                    <a href="{{ path('app_register') }}" class="ext-white bg-green-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mt-2 ml-48 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">M'inscrire</a>
                </form>
            </div>
        </div>
    </section>

{% endblock %}
