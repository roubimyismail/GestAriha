{% extends 'base.html.twig' %}

{% block title %}Enseignants{% endblock %}

{% block body %}
    <h1>Enseignants</h1>

   
    
           
    <span class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96  dark:bg-green-100 dark:border-green-400"> {{ enseignant.firstname }} </span>
    <span class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96  dark:bg-green-100 dark:border-green-400"> {{ enseignant.lastname }} </span>
    {% for matfield in enseignant.matiere %}
        <span class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96  dark:bg-green-100 dark:border-green-400"> {{ matfield }} </span>
    {% endfor %}    
    {% for nivfield in enseignant.niveau %}    
        <span class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96  dark:bg-green-100 dark:border-green-400"> {{ nivfield }} </span>
    {% endfor %}
    {% for clafield in enseignant.classe %}    
        <span class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96  dark:bg-green-100 dark:border-green-400"> {{ clafield }} </span>
    {% endfor %}
    {% for annfield in enseignant.anneescolaire %}
        <span class="bg-green-50 border border-green-500 text-green-900 placeholder-green-700 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-96  dark:bg-green-100 dark:border-green-400"> {{ annfield }} </span>
    {% endfor %}
                      <div class="px-4 py-1 ">
                      </div>
    <a href="{{ path('app_enseignant_list') }}" class="ext-white bg-green-700  focus:outline-none  font-medium rounded-full text-sm px-5 py-2.5 text-center ">Retour List Eleve</a>
    <a href="{{ path('app_enseignant_edit', {'id': enseignant.id}) }}" class="ext-white bg-green-700  focus:outline-none  font-medium rounded-full text-sm px-5 py-2.5 text-center ">Modifier Enseignant</a>

   
{% endblock %}
